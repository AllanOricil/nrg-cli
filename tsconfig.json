{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "types": ["vitest/globals"]
  },
  "ts-node": { "esm": true },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
